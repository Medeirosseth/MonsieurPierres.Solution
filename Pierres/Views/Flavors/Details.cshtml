@model Pierres.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3> @Html.DisplayNameFor(model => model.FlavorName): @Html.DisplayFor(model => model.FlavorName)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p> No flavors here, add one!</p>
}
else
{
<h3>This flavor can be found in:</h3>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Treat.TreatName</li>
      @using (Html.BeginForm("DeleteTreat", "Flavor"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}

<p>
  @Html.ActionLink("FLAVORS", "Index")&nbsp;&nbsp;&nbsp;&nbsp;
  @Html.ActionLink("EDIT FLAVOR", "Edit", new { id = Model.FlavorId })&nbsp;&nbsp;&nbsp;&nbsp;
  @Html.ActionLink("REMOVE FLAVOR", "Delete", new { id = Model.FlavorId })&nbsp;&nbsp;&nbsp;&nbsp;
  @Html.ActionLink("HOME", "Index", "Home")&nbsp;&nbsp;&nbsp;&nbsp;
</p>