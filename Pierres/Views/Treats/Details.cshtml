@model Pierres.Models.Treat
@using System

<h2>Treat Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.TreatName): @Html.DisplayFor(model => model.TreatName)</h3>
<h4>@Model.StarRating()</h4>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This tasty treat doesnt belong to any flavors</p>
}
else
{
  <h4>Flavors this treat belongs to:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Flavor.FlavorName</li>
      @using (Html.BeginForm("DeleteFlavor", "Treats"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

<p>
  @Html.ActionLink("Add Flavor", "AddFlavor", new { id = Model.RecipeId })
  @Html.ActionLink("Back to list", "Index")</p>
  @Html.ActionLink("Edit Treat", "Edit", new { id = Model.RecipeId })   
  @Html.ActionLink("Delete Treat", "Delete", new { id = Model.RecipeId })
</p>